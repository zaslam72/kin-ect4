<div class="ui grid center aligned teal card box-3">
  <div class="column">
    <div class="image">
      <img src=<%= game.thumbnail_url %> class="img-thumbnail testing card-img-top" >
    </div>
    <div class="content">
      <h4><%= link_to game.title, game_path(game), class: "link" %></h4>
        <% if current_user %>
          <% if current_user.games.include?(game) %>
            <%= button_to "- unsubscribe", user_game_subscription_path(current_user, game, game.subscriptions.where(game_id: game.id, user_id: current_user.id)), method: 'delete', action: :destroy, class: "ui small yellow button" %>
          <% else %>
            <%= button_to "+ subscribe", user_game_subscriptions_path(current_user, game, method: :post), class: "ui small yellow button" %>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
